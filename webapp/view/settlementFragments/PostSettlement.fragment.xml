<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Dialog title="Post Settlement to Finance" contentWidth="600px" type="Message">
        <content>
            <VBox class="sapUiSmallMargin">
                <MessageStrip text="This will create FI documents and initiate the payment process. This action cannot be undone." type="Information" showIcon="true" class="sapUiSmallMarginBottom" />

                <form:SimpleForm title="Credit Memo Preview" editable="false" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" columnsL="1" columnsM="1">
                    <form:content>
                        <HBox justifyContent="SpaceBetween">
                            <Label text="Document Type :" design="Bold" />
                            <Text text="Credit Memo" />
                        </HBox>

                        <HBox justifyContent="SpaceBetween">

                            <Label text="Customer :" design="Bold" />
                            <Text text="ABC Retail Pvt Ltd (CUST-001)" />
                        </HBox>

                        <HBox justifyContent="SpaceBetween">

                            <Label text="Amount :" design="Bold" />
                            <Text text="₹1,56,000" />
                        </HBox>

                        <HBox justifyContent="SpaceBetween">
                            <Label text="Posting Date :" design="Bold" />
                            <Text text="31-Mar-2025" />
                        </HBox>

                        <HBox justifyContent="SpaceBetween">
                            <Label text="Reference :" design="Bold" />
                            <Text text="STL-2025-Q1-001" />
                        </HBox>

                        <HBox justifyContent="SpaceBetween">
                            <Label text="Company Code :" design="Bold" />
                            <Text text="1000 (India Operations)" />
                        </HBox>

                    </form:content>
                </form:SimpleForm>

                <!-- <HorizontalDivider class="sapUiMediumMarginTopBottom" /> -->
                <Panel headerText="Journal Entry Preview">
                    <VBox justifyContent="SpaceBetween" width = "100%" alignItems="Start">
                        <HBox justifyContent="SpaceBetween" width = "100%" class="sapUiSmallMarginTopBottom cardRed">
                            <VBox alignItems="Start">
                                <Text text="Debit" />
                                <Label text="2100500 - Accrued Rebate Liability" />
                            </VBox>
                            <VBox alignItems="End">
                                <Title text="₹1,56,000" level="H3" />
                            </VBox>
                        </HBox>
                        <HBox justifyContent="SpaceBetween" width = "100%" class="sapUiSmallMarginTopBottom cardGreen">
                            <VBox alignItems="Start">
                                <Text text="Credit" />
                                <Label text="2000100 - Accounts Payable - Partner" />
                            </VBox>
                            <VBox alignItems="End">
                                <Title text="₹1,56,000" level="H3" />
                            </VBox>
                        </HBox>
                    </VBox>
                </Panel>



                <CheckBox required="true" selected="{newRule>/Agreement}" text="I confirm that this posting is accurate and authorized. I understand that this action will create FI documents and cannot be reversed without a separate reversal posting." wrapping="true" class="sapUiMediumMarginTop" />
            </VBox>
        </content>
        <buttons>
            <Button text="Cancel" press="onClosePostSettlementDialog" />
            <Button text="Confirm &amp; Post to FI" icon="sap-icon://upload-to-cloud" type="Emphasized" enabled="{= !!${newRule>/Agreement}}" press="onSavePostSettlement" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>