<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog title="Approve Settlement" contentWidth="500px">
        <content>
            <VBox class="sapUiSmallMargin">
                <MessageStrip text="You are about to approve this settlement for posting and payment. Please review the details carefully." type="Success" showIcon="true" class="sapUiSmallMarginBottom" />

                <f:SimpleForm>

                    <HBox justifyContent="SpaceBetween">
                        <Label text="Settlement Number :" design="Bold" />
                        <Text text="STL-2025-Q1-001" />
                    </HBox>

                    <HBox justifyContent="SpaceBetween">
                        <Label text="Partner :" design="Bold" />
                        <Text text="ABC Retail Pvt Ltd" />
                    </HBox>

                    <HBox justifyContent="SpaceBetween">
                        <Label text="Settlement Period :" design="Bold" />
                        <Text text="2025-Q1 (Jan-Mar)" />
                    </HBox>

                    <HBox justifyContent="SpaceBetween">
                        <Label text="Total Accrued :" design="Bold" />
                        <Text text="₹1,00,000" />
                    </HBox>

                    <HBox justifyContent="SpaceBetween">
                        <Label text="Adjustments :" design="Bold" />
                        <Text text="+₹56,000" />
                    </HBox>

                    <HBox justifyContent="SpaceBetween">
                        <Label text="Excluded Disputes :" design="Bold" />
                        <Text text="₹7,200 (2 disputes)" />
                    </HBox>


                    <HBox justifyContent="SpaceBetween" alignItems="Center">
                        <Label text="Final Settlement Amount :" design="Bold" />
                        <Title text="₹1,56,000" level="H4" />
                    </HBox>

                </f:SimpleForm>

                <CheckBox required="true" selected="{newRule>/Agreement}" text="I have reviewed the settlement details, adjustments, and excluded disputes. I confirm that the settlement amount of ₹1,56,000 is accurate and authorized for posting and payment." wrapping="true" class="sapUiMediumMarginTopBottom" />
                
                <f:SimpleForm>
                    <HBox justifyContent="SpaceBetween">
                        <Label text="Approver :" design="Bold" />
                        <Text text="Finance Manager" />
                    </HBox>
                    <HBox justifyContent="SpaceBetween">
                        <Label text="Timestamp :" design="Bold" />
                        <Text text="2/3/2026, 12:50:13 PM" />
                    </HBox>
                </f:SimpleForm>

            </VBox>
        </content>
        <buttons>
            <Button text="Cancel" press="onCloseApproveSettlementDialog" />
            <Button text="Approve &amp; Release" type="Accept" icon="sap-icon://accept" enabled="{= !!${newRule>/Agreement}}" press="onSaveApproveSettlement" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>