<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog title="ðŸ‘¤ Reassign Dispute">
        <content>
            <VBox class="sapUiSmallMargin">
               

                <f:SimpleForm
                    layout="ResponsiveGridLayout"
                    editable="true"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                >
                    <Label
                        text="Current Assignee"
                        required="false"
                    />
                    <Input
                        value="Rahul Kumar"
                        editable="false"
                    />

                    <Label
                        text="New Assignee"
                        required="true"
                    />
                    <ComboBox
                        placeholder="Select user..."
                        width="100%"
                    >
                        <core:Item
                            key="Rahul Kumar"
                            text="Rahul Kumar"
                        />
                        <core:Item
                            key="Priya"
                            text="Priya Sharma"
                        />
                        <core:Item
                            key="Amit"
                            text="Amit Patel"
                        />
                    </ComboBox>

                    <Label
                        text="Reason"
                        required="false"
                    />
                    <TextArea
                        value="{view>/disputeComment}"
                        rows="4"
                        placeholder="Provide detailed explanation..."
                    />
                </f:SimpleForm>
            </VBox>
        </content>

        <buttons>
            <Button
                text="Cancel"
                press="onCloseReassignDM"
            />
            <Button
                text="Reassign"
                type="Emphasized"
                press="onReassigntDispute"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
