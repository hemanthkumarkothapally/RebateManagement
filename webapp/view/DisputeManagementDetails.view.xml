    <uxap:ObjectPageLayout id="ObjectPageLayoutDMD" showTitleInHeaderContent="true" showHeaderContent="true"  >
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:expandedHeading>
                    <Title text="{detail>/description}" wrapping="true" />
                </uxap:expandedHeading>
                <uxap:snappedHeading>
