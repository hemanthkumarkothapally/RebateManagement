<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog title="✓ Resolve Dispute">
        <content>
            <VBox class="sapUiSmallMargin">
                <MessageStrip
                    type="Success"
                    text="Dispute: DSP-2025-0042 | Variance: ₹10,500"
                />
                <f:SimpleForm
                    layout="ResponsiveGridLayout"
                    editable="true"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                >
                    <Label
                        text="Resolution Type "
                        required="true"
                    />
                    <ComboBox
                        placeholder="Select user..."
                        width="100%"
                    >
                        <core:Item
                            key="Rahul Kumar"
                            text="Rahul Kumar"
                        />
                        <core:Item
                            key="Priya"
                            text="Priya Sharma"
                        />
                        <core:Item
                            key="Amit"
                            text="Amit Patel"
                        />
                    </ComboBox>

                    <Label
                        text="Approved Amount"
                        required="false"
                    />
                    <Input
                        value="₹10,500"
                        editable="false"
                    />

                    <Label
                        text="Resolution Notes"
                        required="false"
                    />
                    <TextArea
                        value="{view>/disputeComment}"
                        rows="4"
                        placeholder="Explain the resolution decision.."
                    />
                </f:SimpleForm>
            </VBox>
        </content>

        <buttons>
            <Button
                text="Cancel"
                press="onCloseResolveDM"
            />
            <Button
                text="Confirm Resolution"
                type="Emphasized"
                press="onResolveDispute"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
